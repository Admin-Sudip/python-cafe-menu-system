# Define the menu of restaurant
menu = {
    "Pizza": 59,
    "Pasta": 49,
    "Burger": 69,
    "Salad": 39,
    "Cold Coffee": 79,
    "Water": 20,
}

# Greet
print("Welcome To Our Python Cafe\nThanks for coming\nThis is Our Menu")
for item, price in menu.items():
    print(f"{item}: Rs{price}")

order_total = 0

while True:
    item = input("Enter the name of the item you want to order: ")
    if item in menu:
        order_total += menu[item]
        print(f"Your item {item} has been added to your order.")
    else:
        print(f"Ordered item {item} is not available yet!")

    another_order = input("Do you want to add another item? (Yes/No): ")
    if another_order.lower() != "yes":
        break

print(f"The total amount to pay is Rs:{order_total}")
